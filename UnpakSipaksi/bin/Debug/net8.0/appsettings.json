{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "Database": "server=localhost;port=3306;user=root;password=;database=unpak_sippm_new;" //host.docker.internal
  },
  "Jwt": {
    "Sub": "localhost",
    "Issuer": "localhost",
    "Audience": "localhost",
    "Secret": "UnpakSipaksiSecureKey1234567890!@$%#*&^"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "https://seb.unpak.ac.id/monitoring", //http://localhost:5341
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "UnpakSipaksi.Api"
    }
  },
  "AllowedHosts": "*"
}
